@model ExemploAgenda.Domain.Models.Pessoa

@{
    ViewBag.Title = "Detalhes do Contato";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Pessoa</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SobreNome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SobreNome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <h3>
            Telefones
        </h3>
        @foreach (var item in Model.Telefones)
        {           
            <dt>
               @item.Tipo
            </dt>
            <dd>@item.Numero</dd>
        }
        @Html.ActionLink("Listar Telefones", "Index/" + Model.IdPessoa + "", "Telefone")
        <h3>
            Endereços
        </h3>
        @foreach (var item in Model.Enderecos)
        {
            <dt>
                Logradouro:
            </dt>
            <dd>@item.Logradouro</dd>
        }
        @Html.ActionLink("Listar Endereços", "Index/"+Model.IdPessoa+"","Endereco")
    </dl>
</div>
<p>
@Html.ActionLink("Voltar", "Index", "Pessoa")
</p>
